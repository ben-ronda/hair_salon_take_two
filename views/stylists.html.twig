<html>
<head>
    <title>Hair Salon</title>
</head>
<body>
    <h1>{{ stylist.getName }}</h1>

    {% if clients is not empty %}
        <p>Here are the clients:</p>
        <ul>
            {% for client in clients %}
                <li><a href="/client/{{ client.getId }}">{{ client.getClientName }}</a> : {{client.getEmail }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a client</h4>

    <form action='/clients' method='post'>
        <div>
            <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId }}">

            <label for='client_name'>Client Name:</label>
            <input id='client_name' name='client_name' type='text'>
        </div>
        <div>
            <label for='email'>Client Email:</label>
            <input id='email' name='email' type='text'>
        </div>
        <button type='submit'>Add client</button>
    </form>

    <!-- <form action="/stylist/delete_clients/{{ stylist.getStylistId }}" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" name="button">Delete Clients</button>
    </form> -->

    <p><a href='/'>Home</a></p>
</body>
</html>
